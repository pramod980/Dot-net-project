
@{
    ViewData["Title"] = "Add Property";
}

<div class="home">
	 <img src="~/addproperty_image/add.jpg" class="img-fluid" alt="Loading image">
     <h1>Add your property for rent in House Rental</h1>
     <p>Add your property here free of cost for renting.</p>
</div>

<div class="location">
    <h3>Property Location</h3>
    <h5>Address</h5>
    <input type="text" placeholder="Address" required />
</div>
<div class="general">
    <div class="row col-md-12">
        <h3>General infromation</h3>
        <div class="col-sm-4">
            <h5>Property type</h5>
            <select name="house" id="house">
            <option value="house">House</option>
            <option value="flat">Flat</option>
            <option value="room">Room</option>
          </select>
        </div>

         <div class="col-sm-4">
            <h5>Rental Period</h5>
            <select name="rent" id="rent">
            <option value="month">Monthly</option>
            <option value="sannually">Semi-annually</option>
            <option value="Anual">Annually</option>
          </select>
        </div>

         <div class="col-sm-4">
            <h5>Available from</h5>
            <input type="text" placeholder="Available from" />
        </div>
    </div>
</div>


<div class="general">
    <div class="row col-md-12">
        <div class="col-sm-4">
            <h5>Bed room</h5>
            <select name="cars" id="cars">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
             <option value="5">5</option>
          </select>
        </div>

         <div class="col-sm-4">
            <h5>Area</h5>
            <input type="text" placeholder="Area" required />
        </div>

         <div class="col-sm-4">
            <h5>Rent</h5>
            <input type="text" placeholder="Rupees" required />
        </div>
    </div>
</div>

<div class="general">
    <div class="row col-md-12">
        <div class="col-sm-4">
            <h5>Deposite</h5>
            <input type="text" placeholder="Rupees" required />
        </div>

         <div class="col-sm-4">
            <h5>Prepaid rent</h5>
            <input type="text" placeholder="Rupees" required />
        </div>

         <div class="col-sm-4">
            <h5>Extra expenses</h5>
            <input type="text" placeholder="Rupees" required />
        </div>
    </div>
</div>

<div class="contact">
      <div class="row col-md-12">
          <h3>Contact</h3>
        <div class="col-sm-4">
            <h5>Contact Person</h5>
            <input type="text" placeholder="Person Name" required />
        </div>

         <div class="col-sm-4">
            <h5>Contatc person email</h5>
            <input type="text" placeholder="Email" required />
        </div>

         <div class="col-sm-4">
            <h5>Contact person phone number</h5>
            <input type="text" placeholder="Contact number" required />
        </div>
    </div>
</div>

<div class="image">
    <h3>Images</h3>
      <input type="file" id="myFile" name="filename">
</div>
<div class=" button">
     <input type="submit">
</div>
